<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79BAEC"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/maplestorybold"
        android:text="재미있는 계산기 놀이"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/num1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/maplestorybold"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="+"
            android:textSize="50dp" />
        <TextView
            android:id="@+id/num2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/maplestorybold"
            android:gravity="center"
            android:text="9"
            android:textColor="#000"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/sign2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="="
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/result1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/maplestorybold"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#000"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/result2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/maplestorybold"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#000"
            android:textSize="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="1"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="2"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="3"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="4"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="5"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="6"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="7"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="8"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="9"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/Mathprev"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="&lt;"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/button0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="0"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />

        <Button
            android:id="@+id/report"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:fontFamily="@font/maplestorybold"
            android:text="제출"
            android:textColor="#000"
            android:textSize="30sp"
            app:backgroundTint="@color/ic_logo_background" />
    </LinearLayout>









    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mathprev"></com.google.android.gms.ads.AdView>

</LinearLayout>